#region-guias.container
  .region
    .region-title
      %h1= page_title!('guia')

  .region
    %p
      %b Numero guia:
      = @guia.numero_guia_id
    %p
      %b Fecha emision:
      = @guia.fecha_emision
    %p
      %b Fecha traslado:
      = @guia.fecha_traslado
    %p
      %b Partida direccion:
      = @guia.partida_direccion
    %p
      %b Partida distrito:
      = @guia.partida_distrito_id
    %p
      %b Llegada direccion:
      = @guia.llegada_direccion
    %p
      %b Llegada distrito:
      = @guia.llegada_distrito_id
    %p
      %b Remitente:
      = @guia.remitente_id
    %p
      %b Destinatario:
      = @guia.destinatario_id
    %p
      %b Marca vehiculo:
      = @guia.marca_vehiculo
    %p
      %b Placa:
      = @guia.placa_id
    %p
      %b Configuracion vehicular:
      = @guia.configuracion_vehicular
    %p
      %b Numero certificado inscripcion:
      = @guia.numero_certificado_inscripcion
    %p
      %b Licencia conducir:
      = @guia.licencia_conducir

  .region
    - if current_admin
      .admin-controls
        = link_to 'Editar', edit_guia_path(@guia), class: 'btn btn-success'
    = link_to 'Regresar', guias_path, class: 'btn btn-warning'
