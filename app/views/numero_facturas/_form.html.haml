= form_for @numero_factura, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @numero_factura.errors.any?
    #error_explanation
      %h2= "#{pluralize(@numero_factura.errors.count, "error")}"
      %ul
        - @numero_factura.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :numero, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :numero, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
