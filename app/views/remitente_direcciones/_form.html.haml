= form_for @remitente_direccione, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @remitente_direccione.errors.any?
    #error_explanation
      %h2= "#{pluralize(@remitente_direccione.errors.count, "error")}"
      %ul
        - @remitente_direccione.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :direccion, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :direccion, class: 'form-control'
  .form-group
    = f.label :remitente_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :remitente_id, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
